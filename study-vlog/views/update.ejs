<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="shortcut icon" href="icon.jpg" type="image/x-icon">

    <title>Blog-Update-Post</title>
</head>

<body style="background-color: rgb(180, 243, 150);">
    <div class="container mt-3">
        <h1 style="color: rgb(252, 177, 65);">My Blogs-Update</h1>

        <p style="color: red;">
            <%= locals.errorMessage %>
        </p>
        <p style="color: green;">
            <%= locals.message %>
        </p>

        <form method="POST" class="mt-3" autocomplete="off">
            <input type="search" required name="title" class="form-control mb-3" autofocus placeholder="Title"
                autocomplete="off" id="title" value="<%= locals.title  %>">
            <textarea required name="content" cols="30" rows="5" placeholder="Text Here..." class="form-control"
                id="content">
                <%= locals.content  %>
            </textarea>

            <input type="submit" value="Update" class="btn btn-primary mt-2" id="button">
        </form>

        <a href="/" class="btn btn-danger mt-5">View Blogs</a>

    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>


</body>

</html>